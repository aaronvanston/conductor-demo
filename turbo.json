{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "APP_PORTS",
    "NEXT_PUBLIC_APP_PORTS",
    "NEXT_PUBLIC_WORKING_BRANCH",
    "NEXT_PUBLIC_GIT_BRANCH",
    "NEXT_PUBLIC_BRANCH_NAME",
    "NEXT_PUBLIC_WORKSPACE_NAME",
    "NEXT_PUBLIC_VERCEL_GIT_COMMIT_REF",
    "NEXT_PUBLIC_VERCEL_ENV",
    "NODE_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
